<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h2>Welcome to the CourtHub</h2>
            <p>Place where you can show off court you are rocking in!</p>
            <p>
                <a class="btn btn-sm btn-dark" href="/courts/new">Click to add new court!</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class="col-md-12">
            <% if(noMatch !== null){ %>
                <h3><%= noMatch %></h3>
                <p>
                    <form action="/courts" method="GET" class="form-inline">
                        <div class="form-group">
                            <input type="text" name="search" placeholder="Search for a court!" class="form-control">
                            <input type="submit" value="Search" class="btn btn-dark">
                        </div>
                    </form>
                </p>
            <% } %>
        </div>
            <% courts.forEach(function(basketballCourt){ %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="<%= basketballCourt.image %>" alt="<%= basketballCourt.name %>" style="height: 200px; width:100%">
                            <div class="card-body">
                                <h5 class="card-title"><%= basketballCourt.name %></h5>
                                <a href=/courts/<%= basketballCourt._id %> class="btn  btn-sm btn-dark">More Info</a>
                            </div>
                    </div>
                </div>
            <% }); %>
    </div>

<% include ../partials/footer %>